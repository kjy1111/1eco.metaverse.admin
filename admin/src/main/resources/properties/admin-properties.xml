	<!-- Mybatis -->
	<entry key="mybatis.configLocation">classpath:config/mybatis-config.xml</entry>
	<entry key="mybatis.mapperLocations">classpath:sqlmap/**/*.xml</entry>
	<!-- Mybatis -->

</properties>